{% extends "base.twig" %}

{% block content %}
	<div id="primary" class="content-area">
		<main id="main" class="site-main" role="main">
			
			{% include 'partials/hero-banner.twig' %}

			<article id="content-body" class="blog load-more-target">
				{% for post in posts %}
					{% include 'partials/tease.twig' %}
				{% endfor %}
			</article><!-- #content-body -->
			
			<script>var intPostsOffsetDefault = {{posts|length}};</script>

			{% if posts|length >= posts_per_page %}
			<article id="callout-block" class="load-more">
				<div class="container">
					<a href="#" class="btn dark white" id="load-more-posts" data-posttype="post">Load More</a>
				</div><!-- .container -->
			</article><!-- #callout-block -->
			{% endif %}

		</main><!-- #main -->
	</div><!-- #primary -->
{% endblock %}