<div class="post-block">
	<a href="{{recent_post.link}}">
		<div class="image-container">
			<div class="image" style="background: url({{recent_post.thumbnail.src('post-block')}}) center center no-repeat; background-size: cover;"></div><!-- .image -->
		</div><!-- .image-container -->

		<div class="details">
			<h2 class="post-title">{{recent_post.title}}</h2><!-- .post-title -->
			<span class="post-meta">{{recent_post.post_date|date}}</span><!-- .post-meta -->
			<p class="excerpt">{{recent_post.get_preview(50, false, false)}}</p>
			<span href="{{recent_post.link}}" class="fancy">Read More</span>
		</div><!-- .details -->
	</a>
</div><!-- .post-block -->