<div id="hero-banner">
	{% set hero_image_id = fn('is_single') ? hero_image : post.hero_image %}
	<div class="image skrollable skrollable-between" style="background: url({{TimberImage(hero_image_id).src('interior-hero')}}) center center no-repeat; background-size: cover;"  data-0="top:0px; opacity: .3; transform: scale(1);" data-260="top:250px; opacity: 0; transform: scale(1.2);"></div>
	<div class="caption skrollable skrollable-between" data-0="top: 0px; opacity: 1;" data-260="top: 200px; opacity: 0;">
		<div class="container">

			{% if fn('is_single') %}
			<span class="main-headline page-title">{{post.title}}</span>
			{% else %}
			<h1 class="main-headline page-title">{{post.title}}</h1>
			{% endif %}

			{% if post.hero_text %}
			<span class="sub-headline">{{post.hero_text}}</span>
			{% endif %}

		</div><!-- .container -->
	</div><!-- .caption -->
</div><!-- #hero-banner -->