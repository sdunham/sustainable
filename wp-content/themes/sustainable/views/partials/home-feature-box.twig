<div class="col-1-3">
	<img src="{{fn('get_stylesheet_directory_uri')}}/img/ico-{{box.icon}}@2x.png" style="{{box.icon == 'team' ? 'width:54px; height:44px;' : 'width:36px; height:44px;'}}">
	<h3 class="title">{{box.title}}</h3>
	<p class="desc">{{box.text}}</p>
	{% if box.more_info_url %}
	<a href="{{box.more_info_url}}" class="fancy">More Info</a>
	{% endif %}
</div><!-- .col-1-3 -->